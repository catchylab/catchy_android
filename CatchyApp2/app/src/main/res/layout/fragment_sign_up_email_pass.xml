<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:background="@drawable/backgrond_circler">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtHeaderEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/su_email_register"
                android:textColor="#8A000000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:gravity="center|left"
                android:singleLine="true"
                android:hint="@string/su_email_register"
                android:textColor="#000000"
                android:textColorHint="#61000000" />

            <View
                android:id="@+id/viewBottomEmail"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B000000" />

            <TextView
                android:id="@+id/txtBottomEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DEFF1744"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <TextView
                android:id="@+id/txtHeaderPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/su_pass"
                android:textColor="#8A000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center|left"
                    android:hint="@string/su_pass"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="#61000000" />

                <CheckBox
                    android:id="@+id/cbShowPass"
                    android:layout_width="24dp"
                    android:layout_height="15dp"
                    android:background="@drawable/check_show_pass"
                    android:button="@null" />
            </LinearLayout>

            <View
                android:id="@+id/viewBottomPass"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6B000000" />

            <TextView
                android:id="@+id/txtBottomPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#DEFF1744"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="37dp"
            android:background="@drawable/btn_start"
            android:gravity="center"
            android:text="@string/we_next"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>