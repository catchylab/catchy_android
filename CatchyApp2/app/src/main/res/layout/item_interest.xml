<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="18dp">
    <RelativeLayout
        android:id="@+id/interest_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/imageOfItemInterest"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#000"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/interestOfItemInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintHeight_percent="0.2"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                card_view:layout_constraintWidth_percent="0.2"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_asset_round_not_select" />
            <TextView
                android:id="@+id/nameOfItemInterest"
                android:layout_width="match_parent"
                android:text="name"
                android:textColor="#FFF"
                android:gravity="bottom"
                android:textSize="20dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_height="match_parent" />
        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>